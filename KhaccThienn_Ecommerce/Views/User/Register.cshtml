@model KhaccThienn_Ecommerce.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ***** Main Banner Area Start ***** -->
<div class="page-heading about-page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <h2>Register</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->
<div class="container-fluid">
    <div class="row justify-content-around">
        <form method="post" asp-action="Register" class="col-lg-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="returnUrl" value="@ViewBag.returnUrl" type="hidden" />
            <div class="row">
                <div class="form-group col-lg-6">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control rounded-0" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control rounded-0" autocomplete="off" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-lg-6">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control rounded-0" autocomplete="off" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control rounded-0" autocomplete="off" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-lg-6">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control rounded-0" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control rounded-0" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-secondary rounded-0 btn-block">Register Now</button>
            <p>Already Having An Account ? <a asp-controller="User" asp-action="Login" class="text-black">Login Now</a></p>
        </form>
    </div>

</div>

