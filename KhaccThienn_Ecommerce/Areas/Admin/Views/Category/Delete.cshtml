@model KhaccThienn_Ecommerce.Models.DataModels.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @(Model.Status == 1 ? "Show" : "Hide")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Created_Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Created_Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Updated_Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Updated_Date)
        </dd>
    </dl>
    
    <form asp-action="Delete" onsubmit="return confirm('Are You Sure ?')">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger rounded-0" /> |
        <a asp-action="Index" class="btn btn-outline-secondary rounded-0">Back to List</a>
    </form>
</div>
